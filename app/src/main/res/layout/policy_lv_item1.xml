<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cadetblue"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="610dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/policy_id_barcode_iv"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />


        <TextView
            android:id="@+id/policy_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/policy_id_barcode_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0.5dp"
            android:text="111111232324"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_policy_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/policy_id_tv"
            android:layout_marginTop="@dimen/size15"
            android:src="@drawable/insurance_logo" />

        <TextView
            android:id="@+id/tv_policy_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_policy_logo"
            android:layout_marginTop="@dimen/size12"
            android:gravity="center_horizontal"
            android:text="电子防盗标签信息采集表"
            android:textColor="@color/color_831C70" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_policy_title"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电   子   标   签   号   :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/tag_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="16101B4B"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车     主     姓     名    :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="张三"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车   主   手   机   号   :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="13556325565"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车  主  身  份  证  号 :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/idcard_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="440582199304758965"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="@dimen/size5">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/insurance_black_block" />

                <LinearLayout
                    android:id="@+id/ll_car_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size60"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车  辆  牌  号  :"
                        android:textColor="@color/color_831C70"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/cno_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size20"
                        android:text="粤D1234"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/size60"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车  辆  型  号  :"
                        android:textColor="@color/color_831C70"
                        android:textSize="@dimen/textSize12" />

                    <TextView
                        android:id="@+id/model_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size20"
                        android:text="华爵FD3G04"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="车辆录入平台日期    :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="2015-12-12"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保 险 档 次 (见说明) :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/price_lev_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="A档"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每次最高赔偿限额    :    人民币 "
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/capitcal_damage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="壹仟贰佰"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                                           C N Y "
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/damage_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="1200"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="防 盗 标 签 服 务 费  :     人民币"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/capitcal_service_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="叁拾捌"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="                                           C N Y "
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/service_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="38"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size25"
                android:layout_marginRight="@dimen/size20"
                android:layout_marginTop="@dimen/size5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="防盗标签服务期限    :"
                    android:textColor="@color/color_831C70"
                    android:textSize="@dimen/textSize12" />

                <TextView
                    android:id="@+id/service_term_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:text="2016-08-06至2017-08-06"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size50"
            android:layout_marginRight="@dimen/size60"
            android:background="@drawable/insurance_seal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size60"
            android:layout_marginRight="@dimen/size25"
            android:text="深圳市华士精诚科技有限公司"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/size70"
            android:layout_marginRight="@dimen/size10"
            android:src="@drawable/insurance_side" />
    </RelativeLayout>
</RelativeLayout>
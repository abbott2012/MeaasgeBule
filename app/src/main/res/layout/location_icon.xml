<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/size30"
              android:layout_height="@dimen/size36.7">

    <RelativeLayout
        android:layout_width="@dimen/size30"
        android:layout_height="@dimen/size36.7">

        <ImageView
            android:layout_width="@dimen/size30"
            android:layout_height="@dimen/size36.7"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/map_locateicon"/>

        <ImageView
            android:id="@+id/iv_location_icon"
            android:layout_width="@dimen/size26"
            android:layout_height="@dimen/size26"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size2"
            android:scaleType="fitXY"
            android:src="@drawable/location_person_default"/>
    </RelativeLayout>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:layout_marginLeft="@dimen/size10"
        android:gravity="center_vertical"
        android:text="被监护人"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/textSize13"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/uname_et_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="请输入被监护人的姓名"
            android:maxLength="15"
            android:minHeight="40dp"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/check_box_man_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:button="@drawable/no_select_point"
            android:paddingLeft="10dp"
            android:text="男"
            android:textColor="@color/color_b3b3b3"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/check_box_woman_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:button="@drawable/no_select_point"
            android:paddingLeft="10dp"
            android:text="女"
            android:textColor="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="出生日期"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/ubirthday_et_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:focusable="false"
            android:hint="请选择出生日期"
            android:maxLength="15"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="人物类型"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="@dimen/size18"
            android:layout_height="@dimen/size18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size10"
            android:src="@drawable/read_more"/>

        <EditText
            android:id="@+id/et_select_user_type_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:focusable="false"
            android:hint="点击选择任务类型"
            android:maxLength="18"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="身份证号"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/et_user_idcard_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="请输入身份证号(选填)"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size30"
            android:layout_marginLeft="@dimen/size10"
            android:gravity="center_vertical"
            android:text="上传照片"
            android:textColor="@color/color_404040"
            android:textSize="@dimen/textSize13"/>

        <ImageView
            android:id="@+id/plate_iv_person"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/size14"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/pic_front"/>


    </LinearLayout>
</LinearLayout>
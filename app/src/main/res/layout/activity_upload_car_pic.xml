<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size26"
                android:layout_marginTop="@dimen/size12"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="请上传尽量清晰的照片"
                android:textColor="@color/color_404040"
                android:textSize="13sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginTop="@dimen/size14"
                    android:text="购车发票"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize15"/>

                <ImageView
                    android:id="@+id/iv_add_receipt"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/size14"
                    android:scaleType="fitXY"
                    android:src="@drawable/pic_receipt"/>

                <View
                    style="@style/commenView"
                    android:layout_marginTop="@dimen/size14"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size14">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size10"
                        android:text="爱车照片"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize15"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="#ff0000"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/center_pic_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/plate_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic_front"/>

                    <ImageView
                        android:id="@+id/vehicle_front_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="@dimen/size10"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic_back"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vehicle_side_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/vehicle_side_one_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic_left"/>


                    <ImageView
                        android:id="@+id/vehicle_side_two_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="@dimen/size10"
                        android:layout_marginRight="10dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic_right"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_bind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:background="@color/color_3270ed"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize15"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ll_back_pro"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/back_arrow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="车辆信息"
            android:textColor="@color/color_404040"
            android:textSize="18sp"/>
    </RelativeLayout>

    <View style="@style/commenView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="第一步: 车俩信息登记"
        android:textColor="@color/color_3270ed"
        android:textSize="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="车牌号"
            android:textColor="@color/color_404040"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/car_num"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入车牌号(或点击车牌识别)"
            android:textColor="#000000"
            android:singleLine="true"
            android:maxLength="20"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌识别"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_3270ed"/>

    </LinearLayout>

    <View style="@style/commenView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="车架号"
            android:textColor="@color/color_404040"
            android:textSize="12sp"/>


        <EditText
            android:id="@+id/vi_num"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入车架号"
            android:textColor="#000000"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp"/>

    </LinearLayout>
    <View style="@style/commenView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="购买价格"
            android:textColor="@color/color_404040"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/buy_price"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="人民币,精确到元"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="#000000"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp"/>

    </LinearLayout>
    <View style="@style/commenView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="*"
            android:textColor="@color/color_ff0000"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="购买时间"
            android:textColor="@color/color_404040"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/buy_time"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="false"
            android:hint="选择购买时间"
            android:textColor="#000000"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp"/>

    </LinearLayout>
    <View style="@style/commenView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        android:paddingTop="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="品牌型号"
            android:textColor="@color/color_404040"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/model_type"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="品牌型号"
            android:textColor="#000000"
            android:singleLine="true"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="带*的为必填"
        android:textColor="@color/color_ff0000"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/reg_next"
        style="@style/commenBtn"
        android:layout_marginTop="50dp"
        android:text="下一步"/>


</LinearLayout>
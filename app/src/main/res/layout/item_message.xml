<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:background="@color/white"
              android:paddingLeft="@dimen/size10"
              android:paddingRight="@dimen/size10"
              android:paddingBottom="@dimen/size12"
              android:paddingTop="@dimen/size12"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mes_title"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="车辆异常"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/textSize12"/>

        <TextView
            android:id="@+id/tv_mes_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天12:30"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/textSize11"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mes_content"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="您的车辆位置发生异常,请到现场确认消除或立即报警"
            android:maxLines="1"
            android:textColor="@color/color_595959"
            android:textSize="@dimen/textSize10"/>

    </LinearLayout>
</LinearLayout>
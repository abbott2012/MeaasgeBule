<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:layout_marginLeft="@dimen/size10"
        android:gravity="center_vertical"
        android:text="车主信息"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/textSize13"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="身份证号"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/ocr_idcard_iv"
            android:layout_width="@dimen/size18"
            android:layout_height="@dimen/size18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size10"
            android:src="@drawable/bar_camera"/>

        <EditText
            android:id="@+id/ucardid_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:layout_toLeftOf="@id/ocr_idcard_iv"
            android:background="@null"
            android:hint="请用OCR识别身份证"
            android:maxLength="18"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/uname_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="请输入您的姓名"
            android:maxLength="15"
            android:minHeight="40dp"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="性别"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/check_box_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:button="@drawable/no_select_point"
            android:paddingLeft="10dp"
            android:text="男"
            android:textColor="@color/color_b3b3b3"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/check_box_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:button="@drawable/no_select_point"
            android:paddingLeft="10dp"
            android:text="女"
            android:textColor="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="出生日期"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/ubirthday_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:focusable="false"
            android:hint="请选择出生日期"
            android:maxLength="15"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="户籍地址"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/uresidence_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="必须与身份证户籍地址一致"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size30"
        android:layout_marginLeft="@dimen/size10"
        android:gravity="center_vertical"
        android:text="车辆信息"
        android:textColor="@color/color_404040"
        android:textSize="@dimen/textSize13"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="品牌型号"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/et_car_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="请输入品牌型号"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="车牌号"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <EditText
            android:id="@+id/et_car_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="请输入车牌号"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="购买时间"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="@dimen/size18"
            android:layout_height="@dimen/size18"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size10"
            android:src="@drawable/read_more"/>

        <EditText
            android:id="@+id/et_select_buy_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:focusable="false"
            android:hint="点击选择购买时间"
            android:maxLength="18"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="购买价格"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size10"
            android:text="元"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/textSize15"/>

        <EditText
            android:id="@+id/et_car_buy_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="@dimen/size10"
            android:background="@null"
            android:hint="请输入购买价格"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/color_000000"
            android:textColorHint="@color/color_b3b3b3"
            android:textSize="15sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/size10"
        android:background="@color/color_999999"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size30"
            android:layout_marginLeft="@dimen/size10"
            android:gravity="center_vertical"
            android:text="车辆照片(4张可一起上传)"
            android:textColor="@color/color_404040"
            android:textSize="@dimen/textSize13"/>

        <LinearLayout
            android:id="@+id/center_pic_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size14"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/plate_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_front"/>

            <ImageView
                android:id="@+id/vehicle_front_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_back"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vehicle_side_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/vehicle_side_one_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_left"/>


            <ImageView
                android:id="@+id/vehicle_side_two_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="@dimen/size10"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_right"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
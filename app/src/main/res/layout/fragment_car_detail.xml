<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 主题图片 -->
            <com.jude.rollviewpager.RollPagerView
                android:id="@+id/roll_pager_view"
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:visibility="gone"
                app:rollviewpager_hint_alpha="80"
                app:rollviewpager_hint_color="#7c7c7c"
                app:rollviewpager_hint_gravity="center"
                app:rollviewpager_hint_paddingBottom="16dp"
                app:rollviewpager_hint_paddingLeft="16dp"
                app:rollviewpager_hint_paddingRight="16dp"
                app:rollviewpager_hint_paddingTop="16dp"
                app:rollviewpager_play_delay="3000"/>

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:delay_time="3000"
                app:indicator_drawable_selected="@drawable/select_point"
                app:indicator_drawable_unselected="@drawable/no_select_point"
                app:indicator_height="@dimen/size6"
                app:indicator_margin="@dimen/size5"
                app:image_scale_type="fit_xy"
                app:indicator_width="@dimen/size6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/size10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="品牌类型"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="卡夫"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="车牌号"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_car_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="粤A123456"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:text="车架号"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_che_jia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:layout_marginLeft="@dimen/size10"
                    android:gravity="right"
                    android:text="粤A123456"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="标签号"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_biao_qian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="粤A123456"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/size10"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="购买时间"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_buy_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="2007-01-01"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="购买价格"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_buy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="1200"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:id="@+id/ll_has_buy_service"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="已购服务"
                    android:textColor="@color/color_000000"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_baodan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="安心卡"
                    android:textColor="@color/color_595959"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/read_more"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
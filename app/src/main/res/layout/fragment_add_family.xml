<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size44"
        android:layout_marginTop="@dimen/size10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关系"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/textSize15"/>

        <EditText
            android:id="@+id/tv_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入与监护对象的关系"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/color_595959"
            android:textSize="@dimen/textSize15"/>

        <TextView
            android:id="@+id/tv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="选择"
            android:visibility="invisible"
            android:textColor="@color/color_3270ed"
            android:textSize="@dimen/textSize13"/>

    </LinearLayout>

    <View style="@style/commenView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size44"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size10"
        android:paddingRight="@dimen/size10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/textSize15"/>

        <EditText
            android:id="@+id/tv_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/color_595959"
            android:textSize="@dimen/textSize15"/>

        <TextView
            android:id="@+id/tv_address_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+通讯录"
            android:textColor="@color/color_3270ed"
            android:textSize="@dimen/textSize13"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_now"
        style="@style/commenBtn"
        android:layout_marginTop="90dp"
        android:text="邀请加入"/>

</LinearLayout>
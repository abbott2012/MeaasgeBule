<?xml version="1.0" encoding="utf-8"?>
<com.bql.statetypelayout.AnimationStateTypeLayout
    android:id="@+id/stateLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <com.guoji.mobile.cocobee.view.springview.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:header="@layout/spring_default_header"
        app:type="follow">

        <com.bql.pulltorefreshandloadmore.loadmoreview.LoadMoreRecyclerView
            android:id="@+id/rcv_load_more"
            style="@style/LoadMoreRcvStyle">
        </com.bql.pulltorefreshandloadmore.loadmoreview.LoadMoreRecyclerView>
    </com.guoji.mobile.cocobee.view.springview.SpringView>

</com.bql.statetypelayout.AnimationStateTypeLayout>
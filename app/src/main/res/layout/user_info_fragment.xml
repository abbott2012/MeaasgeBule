<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_dcdfe6"
              android:orientation="vertical">

    <include layout="@layout/view_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_user_pic"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="@dimen/size16"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="头像"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <ImageView
                    android:id="@+id/iv_user_pic"
                    android:layout_width="@dimen/size60"
                    android:layout_height="@dimen/size60"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/head"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:id="@+id/ll_user_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size44"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="我的姓名"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="黑猫"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:id="@+id/ll_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size44"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="性别"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="男"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:id="@+id/ll_user_birth"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size44"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="出生日期"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <TextView
                    android:id="@+id/tv_user_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="1990-07-02"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <View style="@style/commenView"/>


            <LinearLayout
                android:id="@+id/ll_user_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size44"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="身份证号"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="黑猫"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_user_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size44"
                android:layout_marginTop="@dimen/size16"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight="1"
                    android:text="手机号"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <TextView
                    android:id="@+id/tv_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="13521554564"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/textSize16"/>

            </LinearLayout>

            <View style="@style/commenView"/>

            <LinearLayout
                android:id="@+id/ll_user_addr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size44"
                android:background="@color/white"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_marginRight="@dimen/size10"
                    android:text="所属区域"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/textSize15"/>

                <TextView
                    android:id="@+id/tv_user_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/size10"
                    android:text="深圳市南山区"
                    android:textColor="@color/color_595959"
                    android:textSize="@dimen/textSize16"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
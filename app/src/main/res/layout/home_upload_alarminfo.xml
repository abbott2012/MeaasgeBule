<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/corner_rec_white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/size10">

    <include layout="@layout/view_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingTop="5dp"
            android:text="描述："
            android:textColor="@android:color/black"/>

        <!--标签ID-->
        <EditText
            android:id="@+id/describe_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_bg_style_two"
            android:gravity="top"
            android:hint="请输入丢车描述"
            android:lines="4"
            android:minHeight="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textSize="15sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:paddingTop="5dp"
            android:text="图片："
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/pic_iv"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_below="@id/vehicle_side_one_iv_tip"
            android:layout_marginTop="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/post_add_pic"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_alerm"
        style="@style/commenBtn"
        android:text="报警"/>

</LinearLayout>